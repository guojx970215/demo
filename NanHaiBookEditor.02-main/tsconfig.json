{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "es2019"],
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@api": ["src/api"],
      "@api/*": ["src/api/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],
      "@contexts": ["src/contexts"],
      "@contexts/*": ["src/contexts/*"],
      "@pages": ["src/pages"],
      "@pages/*": ["src/pages/*"],
      "@stores": ["src/stores"],
      "@stores/*": ["src/stores/*"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@i18n": ["src/i18n"],
      "@i18n/*": ["src/i18n/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
